# AllaweePlus Production Environment Configuration
# Copy this file to .env and update with your production values

# Django Settings
SECRET_KEY=your-super-secret-production-key-here-change-this
DJANGO_SETTINGS_MODULE=core.settings_production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,api.allaweplus.com,localhost,127.0.0.1,10.0.2.2

# Database Configuration (PostgreSQL)
DB_NAME=allaweeplus_prod
DB_USER=allaweeplus_user
DB_PASSWORD=your_secure_database_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@allaweplus.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=120
CELERY_WORKERS=8

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# API Keys and External Services
REMITA_MERCHANT_ID=your-remita-merchant-id
REMITA_SERVICE_TYPE_ID=your-service-type-id
REMITA_API_KEY=your-remita-api-key
REMITA_DEMO_KEY=your-remita-demo-key

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=allaweeplus-media
AWS_S3_REGION_NAME=us-east-1

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=20
RATE_LIMIT_API_REQUESTS=10000
RATE_LIMIT_ANONYMOUS=100

# Cache Settings
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER_PROFILES=600
CACHE_TTL_LOAN_PRODUCTS=1800
CACHE_TTL_DASHBOARD=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
